                        <select id="selUserType" name="selUserType" onchange="SelectType();">
                            <option value="0">==请选择==</option>
                            @{
                                Dictionary<int, string> UserType_dic = ChangeValue.UserListDIC();
                                foreach (var item in UserType_dic)
                                {
                                <option value="@item.Key" >@item.Value</option>
                                }
                            }
                        </select>
                        <span id="spUserType" class="color_ccc">*</span>
                    </td>
                </tr>
        
                <tr>
                    <td align="right">
                        所属区域：
                    </td>
                    <td colspan="3">
                        <p style="padding-left: 5px">
                            省：
