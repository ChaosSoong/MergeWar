                        <input type="text" id="txtCERTIFICATE_TYPE" name="txtCERTIFICATE_TYPE" maxlength="11" class="_text" value="@certifiName" />
                        <input type="hidden" id="txtCertifiID" name="txtCertifiID" value="@user.idType" />
                        <a href="javascript:void(0)"  onclick="javascript:showIdentify()" style="background: #1b5579; border: 1px solid #000;padding: 4px 5px; margin-left: 5px; color: #fff">选择证件类型</a> 
                        <span id="spIdType" class="color_ccc">*</span>
                    </td>*@
                </tr> 
                <tr>
                    <td width="15%" align="right">
                        证件号码：
                    </td>
                    <td colspan="3">
                        <input type="text" id="txtIdnumber" name="txtIdnumber" class="_text" maxlength="18" value="@user.idNumber" /><span
                            id="spIdnumber" class="color_ccc">*</span>
                    </td>
                </tr>
                <tr>
                    <td width="15%" align="right">
                        USBKey串号：
                    </td>
                    <td> <input type="text" id="txtUSBKey" name="txtUSBKey" class="_text" maxlength="16"/>
                        <span id="spUSBKey" class="color_ccc">*</span>
                    </td>
                </tr>
                <tr>
                    <td align="center" colspan="4">
                        <input class="btn_SS" type="submit" name="button" value="保存"/><input type="hidden" id="HId" name="HId" value="@user.ID" />
                    </td>
                </tr> 
            }
            }
        </table>
    </div>
   
