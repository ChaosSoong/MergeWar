@{
    Layout = null;
}

<!DOCTYPE html>
@using System.Collections.Generic
@using HCZZ.Common;
<title>选择证件类型</title>
<link href="@Url.Content("~/Content/css/index.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Content/js/jquery-1.7.1.min.js")" type="text/javascript"></script>

	<div class="Pop_layer" style="float:left ;"> 
		<div class="aq_title">
			<div class="TT_left"></div>
			<div class="TT_right"></div> 
			<div class="img_close" onclick="javascript:location.replace('@Url.Content("~/System/AddUser")')" ></div>
			选择证件类型
		</div>  
            <div class="aq_tab aq_overflow2"> 
 			     <table cellpadding="0" cellspacing="1" width="100%" class="aq_XxTab">
                    @{
            Dictionary<string, string> dic = ChangeValue.GetCertifiCateList();
            int k = 1;
            foreach (var item in dic)
            {
                if (k == 1)
                {
                 @Html.Raw("<tr>");
                }
				            <td width="33%">
                                  <label><input type="radio" name="radCertifi" value="@item.Key" /></label><label>@item.Value</label>
                            </td>
                            if (k == 3)
                            {
                                k = 0;
                                @Html.Raw("</tr>");
                            }
                            k++;
                         }
                    }
                </table>
            </div> 
            <div class="aq_foot"> 
			    <input class="btn_SS" type="button" name="button" value="保存" onclick="onclickAfter()"/>
            </div>
            <script type="text/javascript">
                function onclickAfter() {
                    var aa = $("input[name='radCertifi']:checked").val();
                    if (typeof (aa) != "undefined") {
                        parent.document.getElementById("txtCERTIFICATE_TYPE").value = $("input[name='radCertifi']:checked").parent().next().html();
                        parent.document.getElementById("txtCertifiID").value = $("input[name='radCertifi']:checked").val();
                        parent.hideIdentify();
                    } else {
                        alert('请选择证件类型');
                    }
                }
            </script>
    </div>



