
@{
    Layout = null;
}
@using Webdiyer.WebControls.Mvc
@using HCZZ.ModeDB;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <script src="@Url.Content("~/Content/js/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <link href="~/Content/css/reset1.css" rel="stylesheet" />
    <style>
        .clearboth {
            clear: both;
        }

        body {
            background-color: #0e0d1b;
        }

        /* 设置滚动条的样式 */
        ::-webkit-scrollbar {
            width: 4px;
        }
        /*滚动槽*/
        ::-webkit-scrollbar-track {
            /*-webkit-box-shadow:inset 0 0 6px rgba(0,0,0,0.3) ;*/
            border-radius: 20px;
        }
        /* 滚动条滑块 */
        ::-webkit-scrollbar-thumb {
            border-radius: 10px;
            background: rgba(38,55,56, 1);
            -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.5);
        }

            ::-webkit-scrollbar-thumb:window-inactive {
                background: rgba(0,0,0,1);
            }

        .pupMain {
            width: 632px;
            height: 434px;
            background-color: #161523;
            margin: 0 auto;
        }

        .title {
            width: 632px;
            height: 65px;
            background-image: url(/Content/images/title_bg.png);
            line-height: 65px;
            background-size: 100% 100%;
        }

            .title span:first-child {
                float: left;
                color: #b1b1b1;
                font: 20px "微软雅黑";
                margin-left: 20px;
                margin-top: 19.5px;
            }

            .title span:last-child {
                float: right;
                margin-right: 20px;
                cursor: pointer;
            }

            .title span img {
                width: 18px;
                height: 18px;
                margin-top: 15px;
            }

        .pupMain ul li {
            width: 632px;
            text-align: left;
            margin: 0 auto;
        }

            .pupMain ul li input[type="radio"] {
                width: 20px;
                height: 20px;
                vertical-align: middle;
                margin-right: 12px;
                margin-top: -3px;
            }

            .pupMain ul li span {
                color: #b1b1b1;
                font: 16px "微软雅黑";
            }

            .pupMain ul li img {
                vertical-align: middle;
                margin-left: 35px;
                margin-top: 25px;
            }

            .pupMain ul li span:nth-child(2) {
                margin-left: 18px;
                margin-right: 14px;
            }

            .pupMain ul li input[type="radio"]:last-child {
                margin-left: 30px;
            }

            .pupMain ul li input[type="file"] {
                position: relative;
                width: 115px;
                height: 40px;
                opacity: 0;
                cursor: pointer;
                overflow: hidden;
                z-index: 99;
                margin-left: 18px;
            }

            .pupMain ul li.upfilebox {
                position: relative;
            }

                .pupMain ul li.upfilebox label {
                    position: absolute;
                    border: 1px solid #089CB8;
                    width: 115px;
                    height: 40px;
                    color: #7BD2DA;
                    border-radius: 10px;
                    text-align: center;
                    line-height: 40px;
                    font-size: 16px;
                    left: 74px;
                }

            .pupMain ul li:nth-child(2) {
                margin-top: 20px;
            }

            .pupMain ul li:nth-child(3) {
                margin-top: 15px;
            }

            .pupMain ul li input.yesBtn {
                cursor: pointer;
                width: 265px;
                height: 40px;
                background-image: url(/Content/images/yesBtn.png);
                border: none;
                border-radius: 2px;
                color: #7bd2da;
            }

            .pupMain ul li:last-child {
                text-align: center;
                margin-top: 15px;
                font-size: 16px;
            }

        .MACFXTable {
            border: 1px solid #2A393A;
            color: #8F8F90;
            font: 14px "微软雅黑";
            width: 550px;
            margin: 30px auto;
        }

            .MACFXTable tr {
                border-bottom: 1px solid #2A393A;
                height: 35px;
            }

                .MACFXTable tr:last-child {
                    border-bottom: none;
                }

                .MACFXTable tr td {
                    border-right: 1px solid #2A393A;
                    padding: 5px 10px;
                }

                .MACFXTable tr:nth-child(odd) {
                    background-color: #21222F;
                }

                .MACFXTable tr:nth-child(even) {
                    background-color: #21202E;
                }

                .MACFXTable tr:first-child {
                    background-color: #161523;
                }

                .MACFXTable tr:hover {
                    background-color: #222A36;
                }

                .MACFXTable tr:first-child:hover {
                    background-color: #161523;
                }

                .MACFXTable tr th {
                    border-right: 1px solid #2A393A;
                    padding: 5px 10px;
                }
    </style>
</head>
<body>
    <div class="pupMain">
        @{PagedList<MergeWar.Models.Collision> cllist = (PagedList<MergeWar.Models.Collision>)ViewBag.pl;

            @*<table border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <th style="width: 30%;">序号</th>
                    <th style="width: 40%;">出现场所名称</th>
                    <th style="width: 30%;">采集时间</th>
                    @*<th style="width: 25%;">最后出现场所名称</th>
                        <th style="width: 24%;">最后出现场所时间</th>*@
            @*</tr>
                    @if (cllist!=null||cllist.Count > 0)
                    {
                        int i = 1;
                        foreach (var cl in cllist)
                        {
                            //Loc_NetBarInfo loca = HCZZ.AppCode.WebCommon.GetLocaInfoByNetBar_ID(Convert.ToInt32(cl.NETBAR_ID));
                            //string PLACE_NAME = (loca == null ? "" : loca.PLACE_NAME);

                            <tr>
                                <td style="width: 30%;">@i</td>
                                <td style="width: 30%;" title='@(cl.PLACE_NAME)'>@(Common.ChangeValue.ByteSubString(cl.PLACE_NAME, 12))</td>
                                <td class="addAuthority" style="width: 30%;">@(Szcert.Audit.CommonBase.ChangeValueBase.RefAuditTime(Convert.ToInt64(cl.CAPTURE_TIME)))</td>
                            </tr>
                            i++;
                        }
                    }
                </table>*@
            <ul>
                <li class="title">
                    <span>出现次数详情信息</span>
                    <span><img src="~/Content/images/icon_close1.png" onclick="layerClose()" /></span>
                </li>
                <li style="height: 276px;overflow: auto;">
                    <table class="MACFXTable" border="0" cellspacing="0" cellpadding="0">
                        <tr>
                            <th style="width: 5%;">序号</th>
                            <th style="width: 50%;">出现场所名称</th>
                            <th style="width: 45%;">采集时间</th>
                        </tr>
                        @if (cllist != null || cllist.Count > 0)
                        {
                            int i = 1;
                            foreach (var cl in cllist)
                            {
                                <tr>
                                    <td style="width: 5%;">@i</td>
                                    <td style="width:50%;" title='@(cl.PLACE_NAME)'>@(HCZZ.Common.ChangeValue.ByteSubString(cl.PLACE_NAME, 12))</td>
                                    <td class="addAuthority" style="width: 45%;">@(Szcert.Audit.CommonBase.ChangeValueBase.RefAuditTime(Convert.ToInt64(cl.CAPTURE_TIME),Szcert.Audit.CommonBase.TimeUnits.Sec,true,"N/A"))</td>
                                </tr>
                                i++;
                            }
                        }
                    </table>
                </li>

                <!--<li>
                    <input type="text" name="" id="" value="请输入角色名称" /><span><img src="images/star.png"/></span>
                </li>-->
                <li>
                    <input class="yesBtn" type="button" name="" id="" value="确定" onclick="layerClose()" />
                </li>
            </ul>
        }
    </div>
    <script>
        //点击弹窗中的某个元素关闭自身（弹窗）
        function layerClose() {
            var index = parent.layer.getFrameIndex(window.name);
            parent.layer.close(index);
        }
    </script>
</body>
</html>
