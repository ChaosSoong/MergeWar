@{
    ViewBag.Title = "系统设置--终端版本管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="@Url.Content("~/Content/css/publicHeader.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/css/XTGL.css")" rel="stylesheet" type="text/css" />
@using HCZZ.ModeDB;
@using HCZZ.DAL;
@using Webdiyer.WebControls.Mvc;
@using Common;
@using (Html.BeginForm("VersionInfoList", "System", new { @Id = 1 }, FormMethod.Get))
{
    Dictionary<string, string> dic = (Dictionary<string, string>)ViewBag.dic;
    <div class="contentbody" id="contentbody">
		<div class="contentTitle">
            <input  class="search"  onclick="javascript:location.replace('@Url.Content("~/System/AddVersionInfo")')" type="button" name="button" value="添加终端版本" />
		</div>
	 <div class="contentTable">
            <table border="0" cellspacing="0"  cellpadding="0">
			<tr>
				<th width="4%">序号</th>
                <th width="6%">类型</th>
                <th width="8%">审计程序类型</th>
                <th width="6%">外部版本</th>
				<th width="6%">内部版本</th>
                <th width="4%">强制升级</th>
                <th width="17%">修改日志</th>
                <th width="27%">下载地址</th>
                <th width="12%">创建时间</th>
                <th width="10%">操作</th>
			</tr>
		</table>
	</div>
   <div class="contentTable" taskManagementId>
            <table border="0" cellspacing="0"  cellpadding="0">
        @{
            PagedList<VersionInfo> pl = (PagedList<VersionInfo>)ViewBag.pl;
            if (pl != null && pl.Count > 0)
            {
                foreach (VersionInfo item in pl)
                {
			        <tr>
				        <td style="width: 4%;">@item.PageNum</td>
                        <td style="width: 6%;">
                            @if (item.Type == 1)
                            {
                                <font>验证程序</font>
                            }
                            else if (item.Type == 2)
                            {
                                <font>审计程序</font>
                            }
                            else if (item.Type == 3)
                            {
                                <font>APP监管版</font>
                            }
                            else if (item.Type == 4)
                            {
                                <font>APP商户版</font>
                            }
                            else if (item.Type == 5)
                            {
                                <font>WEB网站</font>
                            }              
                        </td>
                        <td style="width: 8%;">
                            @if (item.CasesType == 1)
                            { <font>Atheros</font> }
                            else if (item.CasesType == 2)
                            {<font>7620N</font> }
                            else if (item.CasesType == 3)
                            { <font>X86</font>}
                        </td>
                        <td style="width: 6%;">@item.OutVersion</td>
                        <td style="width: 6%;">@item.Version</td>
                        <td style="width: 4%;">@(item.Type == 5 ? "N/A" : item.FocusUpdate == 1 ? "是" : "否")</td>
                        <td style="width: 17%;" title="@item.ChangeLog">@ChangeValue.ByteSubString(item.ChangeLog, 26)</td>
                        <td style="width: 27%;" title="@item.DownloadUrl">@ChangeValue.ByteSubString(item.DownloadUrl, 40)</td>
                        <td style="width: 12%;">@item.CreateTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
				        <td style="width: 10%;">
                            <a class="Cz_chakan" href ="@Url.Content("~/System/DetailedVersion/" + item.ID)">
                            <img title="详情" src="@Url.Content("~/Content/images/view1_icon.png")" alt="查看"/>
                            </a>
					        <a class="Cz_bianji" href ="@Url.Content("~/System/EditVersionInfo/" + item.ID)">
                            <img title="编辑" src="@Url.Content("~/Content/images/edit1_icon.png")" alt="编辑"/>  
                            </a>
					        <a class="Cz_shanchu" href="javascript:void(0)" onclick="del('@item.ID')" >
                            <img title="删除" src="@Url.Content("~/Content/images/del1_icon.png")" alt="删除" />
                            </a>	
				        </td>
			        </tr>   
                }
                @*if (pl.TotalPageCount > 1)
                { 
                 <tr>
                    <td colspan="10">
                        <div class="pag_td" style="width: 100%; text-align: center; font-size: 14px">
                            @Html.Pager(pl, new PagerOptions()
                       {
                           PageIndexParameterName = "Id",
                           @CssClass = "pag1"
                       })
                            <div class="pag_all">
                                共<font>@pl.TotalPageCount</font>页/共<font id="spTotalItem">@pl.TotalItemCount</font>条</div>
                        </div>
                    </td>
                </tr>
                }
            }
        else
        {
                <tr><td colspan="10">暂无可显示数据</td></tr>
        }*@      
                }
            }
		</table>
       <div class="page">
           <ul class="ulPage">
               @Ajax.Pager(pl, new PagerOptions
               {
                   FirstPageText = "首页",
                   PrevPageText = "上一页",
                   NextPageText = "下一页",
                   LastPageText = "尾页",
                   PageIndexParameterName = "PageIndex",
                   NavigationPagerItemTemplate = "<li class=\"liPage\" style=\"width: 42px; \">{0}</li>",
                   NumericPagerItemTemplate = "<li class=\"liPage\" style=\"width: 42px; \">{0}</li>",
                   ShowMorePagerItems = false,
               }).AjaxOptions(a => a.SetUpdateTargetId("taskManagementId"))
               <li class="contPage">共<span>@pl.TotalPageCount</span>页/共<span>@pl.TotalItemCount</span>条</li>
           </ul>
       </div>
    </div> 
    </div> 
}
<script type="text/javascript">
        function del(obj) {
            if (confirm("确定要删除吗？")) {
                location.href = '@Url.Content("~/System/DelVersionInfo/")' + obj;
            }
     }
</script>
	 



