        })
        $("#txtContact").focus(function () {
            if ($(this).val() == "联系人") {
                $(this).val("");
            }
        })
        $("#txtContact").blur(function () {
            if ($(this).val() == "") {
                $(this).val("联系人");
            }
        })
        $("#txtAddress").focus(function () {
            if ($(this).val() == "警区地址") {
