            }
        })
        $("#txtAddress").blur(function () {
            if ($(this).val() == "") {
                $(this).val("警区地址");
            }
        })

        $(function () {
            $("form").submit(function () {
                if (pageSubmit()) {
                    return true;
                }
                return false;
            });
        });
        //点击弹窗中的某个元素关闭自身（弹窗）
        function layerClose() {
            var index = parent.layer.getFrameIndex(window.name);
            parent.layer.close(index);
        }
            </script>

