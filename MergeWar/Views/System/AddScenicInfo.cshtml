      <script type="text/javascript">
        function pageSubmit() {
            var result = true;
            if ($.trim($("#txtName").val()) == "") {
                result = false;
               alert("警区名称不能为空");
            } else {
                $("#spName").html("");
            }
            var reg = new RegExp(/\d+$/);
            if ($.trim($("#txtMobile").val()) != "" && !reg.test($.trim($("#txtMobile").val()))) {
                result = false;
               alert("联系电话格式不正确");
            } else {
                $("#spMobile").html("");
            }
            return result;
        }
        $("#txtName").focus(function () {
            if ($(this).val() == "警区名称") {
                $(this).val("");
            }
        })
        $("#txtName").blur(function () {
            if ($(this).val() == "") {
                $(this).val("警区名称");
            }
        })
        $("#txtMobile").focus(function () {
            if ($(this).val() == "联系电话") {
                $(this).val("");
            }
        })
        $("#txtMobile").blur(function () {
            if ($(this).val() == "") {
                $(this).val("联系电话");
