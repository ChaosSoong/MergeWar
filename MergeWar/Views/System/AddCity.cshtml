 <script type="text/javascript">
     function pageSubmit() {
         var result = true;
         if ($.trim($("#txtArea").val()) == "") {
             result = false;
             $("#spArea").html("市名称不能为空");
         } else {
             $("#spArea").html("");
         }


         var reg = new RegExp(/\d+$/);
         if ($.trim($("#txtCity_code").val()) != "" && !reg.test($.trim($("#txtCity_code").val()))) {
             result = false;
             $("#spCity_code").html("市代码格式不正确");
         } else {
             $("#spCity_code").html("");
         }
         return result;
     }

     $(function () {
         $("form").submit(function () {
             if (pageSubmit()) {
                 return true;
             }
             return false;
         });
     });
     $("#txtArea").focus(function () {
         if ($(this).val() == "市名称") {
             $(this).val("");
         }
     })
     $("#txtArea").blur(function () {
         if ($(this).val() == "") {
             $(this).val("市名称");
         }
     })
     $("#txtCity_code").focus(function () {
         if ($(this).val() == "市代码") {
             $(this).val("");
         }
     })
     $("#txtCity_code").blur(function () {
         if ($(this).val() == "") {
             $(this).val("市代码");
         }
     })
     //点击弹窗中的某个元素关闭自身（弹窗）
     function layerClose() {
         var index = parent.layer.getFrameIndex(window.name);
         parent.layer.close(index);
     }
</script>