@{
    Layout = null;
}
@using HCZZ.ModeDB

<!DOCTYPE html>


<head>
    <title></title>
<link href="@Url.Content("~/Content/css/index.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Content/js/jquery-1.7.1.min.js")" type="text/javascript"></script>
</head>
        @using (Html.BeginForm("AddPoliceInfo", "System", FormMethod.Post))
        { 
            AreaInfo area = (AreaInfo)ViewBag.area;
            <div class="Pop_layer" style="float:left ;"> 
		<div class="aq_title">
			<div class="TT_left"></div>
			<div class="TT_right"></div> 
			<div class="img_close" onclick="javascript:parent.closeDiv()"></div>
				添加派出所
		</div>  
            <input type="hidden" name="HAid" value="@(area != null ? area.ID : 0)" />
            <div class="aq_tab aq_overflow2"> 
 		        <table cellpadding="0" cellspacing="1" width="100%" class="aq_XxTab">
                    <tr>
				        <td width="20%" align="right">省名称：</td>
				        <td width="30%">@(area != null ? area.PName : "")</td>   
			        </tr>
                    <tr>
				        <td align="right">市名称：</td>
				        <td>@(area != null ? area.CName : "")</td>   
			        </tr>
                    <tr>
				        <td align="right">区名称：</td>
				        <td>@(area != null ? area.Area : "")</td>   
			        </tr>
			        <tr>
				        <td align="right">派出所名称：</td>
				        <td><input type="text" id="txtName" name="txtName" class="_text"  maxlength="20"/><span id="spName" class="color_ccc">*</span></td>  
			        </tr>
                    <tr>
				        <td align="right">派出所地址：</td>
				        <td><input type="text" id="txtAddress" name="txtAddress" class="_text"  maxlength="30"/><span id="spAddress" class="color_ccc"></span></td>  
			        </tr>
                    <tr>
                    <td align="right">派出所代码：</td>
                    <td><input type="text" id="txtPoliceInfo_code" name="txtPoliceInfo_code"  maxlength="25" class="_text" /><span id="spPoliceInfo_code" class="color_ccc"></span></td>
                    </tr>
			        <tr>
				        <td align="right">联系人：</td>
				        <td><input type="text" id="txtContact" name="txtContact" class="_text"  maxlength="15"/><span id="spContcat" class="color_ccc"></span></td>  
			        </tr>
			        <tr>
				        <td align="right">联系电话：</td>
				        <td><input type="text" id="txtMobile" name="txtMobile" class="_text"  maxlength="13"/><span id="spMobile" class="color_ccc"></span></td>  
			        </tr>
                </table>
            </div> 
            <div class="aq_foot"> 
				<input class="btn_SS" type="submit" name="button" value="保存"/>
            </div>
             </div>
            }
    <script type="text/javascript">
        function pageSubmit() {
            var result = true;
            if ($.trim($("#txtName").val()) == "") {
                result = false;
                $("#spName").html("派出所名称不能为空");
            } else {
                $("#spName").html("");
            }
            var reg = new RegExp(/\d+$/);
            if ($.trim($("#txtMobile").val()) != "" && !reg.test($.trim($("#txtMobile").val()))) {
                result = false;
                $("#spMobile").html("联系电话格式不正确");
            } else {
                $("#spMobile").html("");
            }
            return result;
        }

        $(function () {
            $("form").submit(function () {
                if (pageSubmit()) {
                    return true;
                }
                return false;
            });
        });
            </script>

   
