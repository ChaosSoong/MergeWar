<script type="text/javascript">
    $(function(){
        $("#selUserType").val('@Model.UserType')
    })
    function SaveVal() {
        if (ckVal()) {
            $.ajax
            ({
                type: "post",
                url: '@Url.Content("~/System/EditRole")',
                dataType: "json",
                data: {
                    Jid:@Model.Jid,
                    Name:$("#txtName").val(),
                    UserType: $("#selUserType").val()
                },
                success: function (data, status) {
                    if (typeof (data.err) != 'undefined' && data.err != "") {
                        alert(data.err);
                    } else {
                        if (data.result == "OK") {
                            alert("修改成功");
                            parent.window.location.href='@Url.Content("~/System/RoleList")';
                        } else if (data.result == "NULL") {
                            alert("修改失败");
                        }
                    }
                },
                error: function (data, status, e) {
                    alert(e);
                }
            });
        }
    }
    function ckVal() {
        var result = true;

        if ($("#txtName").val() == "" || $("#txtName").val() == "角色名称不能为空") {
            $("#txtName").val("角色名称不能为空"); result = false;
        } else {
            $("#spName").html("&nbsp;");
        }
        return result;
    }
    $("#txtName").focus(function () {
        if ($(this).val() == '角色名称不能为空') {
            $(this).val("")
        }
    });
    $("#txtName").blur(function () {
        if ($(this).val() == "") {
            $(this).val("@Model.Name")
        }
    });
    //点击弹窗中的某个元素关闭自身（弹窗）
    function layerClose() {
        var index = parent.layer.getFrameIndex(window.name);
        parent.layer.close(index);
    }
</script>