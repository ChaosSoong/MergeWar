        <script type="text/javascript">
            function pageSubmit() {
                var result = true;
                if ($.trim($("#txtName").val()) == "") {
                    result = false;
                    $("#spName").html("派出所名称不能为空");
                } else {
                    $("#spName").html("");
                }
                var reg = new RegExp(/\d+$/);
                if ($.trim($("#txtMobile").val()) != "" && !reg.test($.trim($("#txtMobile").val()))) {
                    result = false;
                    $("#spMobile").html("联系电话格式不正确");
                } else {
                    $("#spMobile").html("");
                }
                return result;
            }

            $(function () {
                $("form").submit(function () {
                    if (pageSubmit()) {
                        return true;
                    }
                    return false;
                });
            });
            //点击弹窗中的某个元素关闭自身（弹窗）
            function layerClose() {
                var index = parent.layer.getFrameIndex(window.name);
                parent.layer.close(index);
            }
